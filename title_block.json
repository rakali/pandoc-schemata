{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Pandoc title block",
  "description": "Metadata in Pandoc title block",

  "definitions": {
    "author": {
      "type": "object",
      "properties": {
        "c": {"type": "array"}
      }
    }
  },

  "type": "array",
  "items": [
    {
      "type": "object",
      "properties": {
        "unMeta": {
          "type": "object",
          "properties": {
            "title": {"type": "object"},
            "author": { "$ref": "#/definitions/author" },
            "date": {"type": "object"}
          },
          "required": ["title", "author", "date"]
        }
      }
    },
    {
      "type": "array"
    }
  ]
}
